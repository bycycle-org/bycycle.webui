{
  "name": "bycycle.webui",
  "version": "1.0.0",
  "repository": "https://github.com/bycycle/bycycle.webui",
  "license": "GPL-3.0",
  "devDependencies": {
    "autoprefixer": "^9.7.2",
    "dotenv": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "ol": "^6.1.1",
    "postcss": "^7.0.23",
    "prettier": "^1.19.1",
    "rollup": "^1.27.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-dotenv": "^0.2.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "rxjs": "^6.5.3",
    "sass": "^1.23.6",
    "sirv-cli": "^0.4.5",
    "svelte": "^3.14.1"
  },
  "scripts": {
    "build": "NODE_ENV=prod npm-run-all sass:prod build:prod",
    "build:dev": "rollup --config --watch",
    "build:prod": "rollup --config",
    "sass:dev": "sass --watch src/styles/global.scss public/global.css",
    "sass:prod": "sass src/styles/global.scss public/global.css",
    "serve:dev": "sirv public --dev",
    "start": "npm-run-all -p sass:dev serve:dev build:dev"
  },
  "browsers": [
    "> 1%",
    "last 2 versions",
    "firefox esr",
    "not ie < 9"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 4,
    "overrides": [
      {
        "files": [
          "*.css",
          "*.scss"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
